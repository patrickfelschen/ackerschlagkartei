<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph_overview"
    app:startDestination="@id/fieldsOverviewMapFragment">

    <fragment
        android:id="@+id/fieldsOverviewMapFragment"
        android:name="de.prog3.ackerschlagkartei.fragments.FieldsOverviewMapFragment"
        tools:layout="@layout/fragment_fields_overview_map"
        android:label="fragment_fields_overview_map">
        <action
            android:id="@+id/action_fieldsOverviewMapFragment_to_fieldsOverviewListFragment"
            app:destination="@id/fieldsOverviewListFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/fieldsOverviewListFragment"
        android:name="de.prog3.ackerschlagkartei.fragments.FieldsOverviewListFragment"
        android:label="fragment_fields_overview_list"
        tools:layout="@layout/fragment_fields_overview_list">
        <action
            android:id="@+id/action_fieldsOverviewListFragment_to_fieldsOverviewMapFragment"
            app:destination="@id/fieldsOverviewMapFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
</navigation>