<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/field_details_bottom_nav"
    app:startDestination="@id/fieldCultivationFragment">

    <fragment
        android:id="@+id/fieldCultivationFragment"
        android:name="de.prog3.ackerschlagkartei.fragments.FieldCultivationFragment"
        android:label="fragment_field_cultivation"
        tools:layout="@layout/fragment_field_cultivation" />
    <fragment
        android:id="@+id/fieldGroundFragment"
        android:name="de.prog3.ackerschlagkartei.fragments.FieldGroundFragment"
        android:label="fragment_field_ground"
        tools:layout="@layout/fragment_field_ground" />
    <fragment
        android:id="@+id/fieldInfoFragment"
        android:name="de.prog3.ackerschlagkartei.fragments.FieldInfoFragment"
        android:label="fragment_field_info"
        tools:layout="@layout/fragment_field_info" />
    <fragment
        android:id="@+id/fieldImagesFragment"
        android:name="de.prog3.ackerschlagkartei.fragments.FieldImagesFragment"
        android:label="fragment_field_images"
        tools:layout="@layout/fragment_field_images">
        <action
            android:id="@+id/action_fieldImagesFragment_to_fieldImagesCameraFragment"
            app:destination="@id/fieldImagesCameraFragment" />
    </fragment>
    <fragment
        android:id="@+id/fieldActionsFragment"
        android:name="de.prog3.ackerschlagkartei.fragments.FieldActionsCategoriesFragment"
        android:label="fragment_field_actions"
        tools:layout="@layout/fragment_field_actions">
        <action
            android:id="@+id/action_fieldActionsFragment_to_fieldActionsOverview"
            app:destination="@id/fieldActionsOverview" />
    </fragment>
    <fragment
        android:id="@+id/fieldActionsOverview"
        android:name="de.prog3.ackerschlagkartei.fragments.FieldActionsOverview"
        android:label="fragment_field_actions_overview"
        tools:layout="@layout/fragment_field_actions_overview" />
    <fragment
        android:id="@+id/fieldImagesCameraFragment"
        android:name="de.prog3.ackerschlagkartei.fragments.FieldImagesCameraFragment"
        android:label="fragment_field_images_camera"
        tools:layout="@layout/fragment_field_images_camera" />
</navigation>