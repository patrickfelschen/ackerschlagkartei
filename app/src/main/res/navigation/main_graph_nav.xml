<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="de.prog3.ackerschlagkartei.ui.views.fragments.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_signInFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_signInFragment_to_fieldsOverviewActivity"
            app:destination="@id/fieldsOverviewActivity"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/fieldsOverviewActivity" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="de.prog3.ackerschlagkartei.ui.views.fragments.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="de.prog3.ackerschlagkartei.ui.views.fragments.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password">
        <action
            android:id="@+id/action_forgotPasswordFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <activity
        android:id="@+id/fieldsOverviewActivity"
        android:name="de.prog3.ackerschlagkartei.ui.views.activities.FieldsOverviewActivity"
        android:label="activity_fields_overview"
        tools:layout="@layout/activity_fields_overview"></activity>
    <activity
        android:id="@+id/fieldDetailsActivity"
        android:name="de.prog3.ackerschlagkartei.ui.views.activities.FieldDetailsActivity"
        android:label="activity_field_details"
        tools:layout="@layout/activity_field_details" />
    <activity
        android:id="@+id/fieldAddActivity"
        android:name="de.prog3.ackerschlagkartei.ui.views.activities.FieldAddActivity"
        android:label="activity_field_add"
        tools:layout="@layout/activity_field_add" />
    <include app:graph="@navigation/details_graph_nav" />
    <include app:graph="@navigation/overview_graph_nav" />
</navigation>